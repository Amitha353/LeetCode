class Solution {
    public boolean isPowerOfTwo(int n) {
        if(n <= 0) return false;
        return ((n & (n-1)) == 0);
    }
}


/*
 n = 1  : 00000001
 n-1    : 00000000
 n & n-1: 00000000
 
 n = 16 : 00010000
 n-1    : 00001111
 n & n-1: 00000000
*/

/*
Time/Space Complexity
Time Complexity: O(1)
Space Complexity: O(1)
*/
